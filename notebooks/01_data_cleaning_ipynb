import pandas as pd


df = pd.read_csv("data/raw/Advanced_stats_NBA - Advanced.csv")


df = df[df["season"] >= 2010]


df = df[df["mp"] >= 500]


print(df.head())
print(df.info())


df.to_csv("data/processed/nba_stats_clean.csv", index=False)

print("Dataset nettoyé enregistré dans data/processed/nba_stats_clean.csv")



